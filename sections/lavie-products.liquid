<section class="page-width lavie-products">
  <div class="grid grid--3-col">
    {%- for block in section.blocks -%}
      <div class="product-card" style="text-align:center;margin-bottom:2rem;">
        {%- if block.settings.image -%}
          <img src="{{ block.settings.image | asset_url }}" alt="{{ block.settings.title | escape }}" style="max-width:100%;height:auto;" />
        {%- endif -%}
        <h3 style="font-family:'Sofia Pro', sans-serif;margin-top:1rem;">{{ block.settings.title }}</h3>
        <p style="font-family:'Neue Haas Grotesk Display Pro', sans-serif;color:#666;margin-top:0.5rem;">{{ block.settings.description }}</p>
        {%- if block.settings.price != blank -%}
          <div class="price" style="font-weight:bold;margin-top:0.5rem;">{{ block.settings.price }}</div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</section>

